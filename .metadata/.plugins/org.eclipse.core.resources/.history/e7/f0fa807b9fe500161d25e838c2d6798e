#include <stdio.h>
#include <stdlib.h>

#define DIMENSION 	6
#define MAX_3_VAL 	999
#define FOLD 		11

char is_palindrome (short v1 , short v2) {
	short multi = v1 * v2;
	for (int i = 0; i < DIMENSION/2; i++) {
		if(multi/power(10, i) != multi/power(10, i + 3))
			return 1;
	}
	return 0;
}

int main(void) {
	short op1, op2;

	while (is_palindrome(op1, op2)) {
		if(op1 == op2) {
			op1 -= FOLD;
			op2 = MAX_3_VAL;
		}
		else
			--op2;
	}

	print("Resolved: %d * %d = %d.", op1, op2, op1 * op2);
	return 0;
}

